{
	"compilerOptions": {
	  "module": "node16",              
	  "target": "ES2022",
	  "moduleResolution": "node16",                 
	  "lib": ["ES2022"],
	  "types": [ 
		"vscode",
		"node"
		],              
	  "outDir": "dist",                  
	  "rootDir": "src",                  
	  "sourceMap": true,                 
	  "strict": true,                    
	  "esModuleInterop": true,           
	  "skipLibCheck": true             
	},
	"include": ["src"],                  
	"exclude": ["node_modules", ".vscode-test"]
  }
  